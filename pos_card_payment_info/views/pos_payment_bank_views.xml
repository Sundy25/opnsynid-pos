<openerp>
<data>

<record id="pos_payment_bank_view_tree" model="ir.ui.view">
    <field name="name">Tree PoS Payment Bank</field>
    <field name="model">pos.payment_bank</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
        </tree>
    </field>
</record>

<record id="pos_payment_bank_view_form" model="ir.ui.view">
    <field name="name">Form PoS Payment Bank</field>
    <field name="model">pos.payment_bank</field>
    <field name="arch" type="xml">
        <form string="Floors">
            <sheet>
                <group col="4">
                    <field name="name" />
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="pos_payment_bank_action" model="ir.actions.act_window">
    <field name="name">Payment Bank</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">pos.payment_bank</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Click to add a Payment Bank.
      </p>
    </field>
</record>

<menuitem
    id="pos_payment_bank_menu"
    name="Payment Bank"
    parent="point_of_sale.menu_point_config_product"
    groups="point_of_sale.group_pos_manager"
    action="pos_payment_bank_action"
    />

</data>
</openerp>
